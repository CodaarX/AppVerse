<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/run_sort_bottom_sheet_root_layout"
    android:paddingBottom="30dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    >

    <TextView
        android:id="@+id/account_fragment_location_bottom_sheet_edit_address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Sort todos"
        android:textColor="@color/app_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/sort_runs_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_fragment_location_bottom_sheet_edit_address_textview">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/sort_by_date_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@drawable/location_drawable_background_selector"
            android:text="Sort by Date"
            android:outlineProvider="background"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:textSize="16sp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/sort_by_running_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@drawable/location_drawable_background_selector"
            android:text="Sort By Running Time"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:textSize="16sp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/sort_by_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@drawable/location_drawable_background_selector"
            android:text="Sort By Distance"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:textSize="16sp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/sort_by_average_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@drawable/location_drawable_background_selector"
            android:text="Sort By Average Speed"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:textSize="16sp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/sort_by_calories_burned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@drawable/location_drawable_background_selector"
            android:text="Sort By Calories Burned"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:textSize="16sp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>