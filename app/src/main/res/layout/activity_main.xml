<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#194881"
    tools:context=".core.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/full_ui"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:openDrawer="start">

                <LinearLayout
                    android:id="@+id/nav_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/app_color"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/menu_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/spacing_middle"
                                    android:layout_marginBottom="@dimen/spacing_middle"
                                    android:paddingLeft="@dimen/spacing_middle"
                                    android:paddingRight="@dimen/spacing_middle"
                                    android:text="MEDIA"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="@color/grey_20" />

                                <LinearLayout
                                    android:id="@+id/radio_feature"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal"
                                    android:focusable="true">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_radio_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Radio"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_music_note_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Music"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_image_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pictures"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_blur_on_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="News"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:paddingLeft="@dimen/spacing_middle"
                                    android:paddingRight="@dimen/spacing_middle"
                                    android:text="UTILITIES"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="@color/grey_20" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_picture_as_pdf_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pdf reader"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_access_alarm_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Alarm"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_keyboard_voice_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Voice recorder"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_flashlight_on_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Touch"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/bar_code_feature"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_contact_phone_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Barcode Details"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:paddingLeft="@dimen/spacing_middle"
                                    android:paddingRight="@dimen/spacing_middle"
                                    android:text="ADVANCE"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="@color/grey_20" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_my_location_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Get My Location"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:gravity="center_vertical"
                                    android:onClick="onMenuClick"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="@dimen/spacing_middle"
                                        android:layout_height="0dp" />

                                    <ImageView
                                        android:layout_width="@dimen/spacing_mlarge"
                                        android:layout_height="@dimen/spacing_mlarge"
                                        android:layout_margin="@dimen/spacing_middle"
                                        app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jokes"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.core.widget.NestedScrollView>

                    </LinearLayout>

                </LinearLayout>


                <include
                    layout="@layout/nav_drawer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
